<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:tb="http://www.hardcodet.net/taskbar"
    xmlns:viewModel="clr-namespace:SyncWatcherTray.ViewModel"
    mc:Ignorable="d">

    <tb:TaskbarIcon
        x:Key="NotifyIcon"
        d:DataContext="{d:DesignInstance viewModel:TaskbarIconViewModel}"
        DoubleClickCommand="{Binding ShowWindowCommand}"
        IconSource="{Binding IconSource}"
        ToolTipText="Watcher">

        <tb:TaskbarIcon.ContextMenu>
            <ContextMenu>
                <MenuItem Command="{Binding OrganizeCommand}" Header="Organize" />
                <Separator />
                <MenuItem Command="{Binding ShowWindowCommand}" Header="Show Window" />
                <MenuItem Command="{Binding HideWindowCommand}" Header="Hide Window" />
                <Separator />
                <MenuItem Command="{Binding ExitApplicationCommand}" Header="Exit" />
            </ContextMenu>
        </tb:TaskbarIcon.ContextMenu>
    </tb:TaskbarIcon>

</ResourceDictionary>